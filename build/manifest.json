{
  "manifest_version": 3,
  "name": "Claude Status Monitor",
  "version": "1.0.0",
  "description": "Monitor Claude's status from Anthropic and display colored status icon with recent incidents",
  "author": "Claude Status Monitor Team",
  "minimum_chrome_version": "88",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://status.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Status Monitor - Click to view status",
    "default_icon": {
      "16": "icons/claude-green-16.png",
      "32": "icons/claude-green-32.png",
      "48": "icons/claude-green-48.png",
      "128": "icons/claude-green-128.png"
    }
  },
  "icons": {
    "16": "icons/claude-green-16.png",
    "32": "icons/claude-green-32.png",
    "48": "icons/claude-green-48.png",
    "128": "icons/claude-green-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}